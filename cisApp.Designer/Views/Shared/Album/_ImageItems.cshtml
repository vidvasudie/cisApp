@using cisApp.Function
@model List<FileAttachModel>
@{
    string classActive = "";
}
 
<ol class="carousel-indicators mb-n5 px-5 py-5">
    @foreach (var item in Model)
    {
        classActive = "";
        if(item.NextImg == item.NextImgSelected)
        {
            classActive = " active ";
        }
        <li data-target="#carouselPreview" data-slide-to="@item.NextImg"  class="@classActive"></li>
    @*<li data-target="#carouselExample" data-slide-to="1"  class="active"></li>
    <li data-target="#carouselExample" data-slide-to="2"></li>
    <li data-target="#carouselExample" data-slide-to="3"></li>*@
    }
</ol>
<div class="carousel-inner">
    @foreach (var item in Model)
    {
        classActive = "";
        if(item.NextImg == item.NextImgSelected)
        {
            classActive = " active ";
        }
        <div class="carousel-item @classActive">
            <img class="d-block w-100" style="object-fit: contain;" src="@Url.Content(item.AdminUrlBase+item.UrlPathAPI)" alt="@item.FileName">
        </div>
    }
