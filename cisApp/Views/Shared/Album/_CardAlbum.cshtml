@using cisApp.Controllers
@model cisApp.Function.AlbumModel
@{
    var selectedBD = Model.CandidateSelected == 1 ? " border border-5  border-danger " : "";
    var selectedBG = Model.CandidateSelected == 1 ? " bg-primary " : "";
    var selectedStyle = Model.CandidateSelected == 1 ? "color: #fff !important;" : "";
    var selectedICON = Model.CandidateSelected == 1 ? " <i class=\"flaticon2-correct text-warning icon-md ml-2\"></i> " : "";
}

<!--begin::Col-->
<div class="col-xl-4 col-lg-6 col-md-6 col-sm-6">
    <!--begin::Card-->
    <div class="card card-custom gutter-b card-stretch @selectedBD">
        <div class="card-header border-0 m-0">

            <h3 class="card-title">
            </h3>

            <div class="card-toolbar">
                <div class="dropdown dropdown-inline" data-toggle="tooltip" title="Quick actions" data-placement="left">
                    <a href="#" class="btn btn-clean btn-hover-light-primary btn-sm btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="ki ki-bold-more-hor"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-md dropdown-menu-right">
                        <!--begin::Navigation-->
                        <ul class="navi navi-hover py-5">
                            <li class="navi-item">
                                <a href="#" class="navi-link">
                                    <span class="navi-icon">
                                        <i class="flaticon2-drop"></i>
                                    </span>
                                    <span class="navi-text">เปิดอัลบั้ม</span>
                                </a>
                            </li>
                            <li class="navi-item">
                                <a href="#" class="navi-link">
                                    <span class="navi-icon">
                                        <i class="flaticon2-list-3"></i>
                                    </span>
                                    <span class="navi-text">Profile @utilityFunc.GenerateName(4) @utilityFunc.GenerateName(9)</span>
                                </a>
                            </li>
                            <li class="navi-item">
                                <a href="#" class="navi-link">
                                    <span class="navi-icon">
                                        <i class="flaticon2-drop"></i>
                                    </span>
                                    <span class="navi-text">เปิดอัลบั้ม</span>
                                </a>
                            </li>
                            <li class="navi-item">
                                <a href="#" class="navi-link">
                                    <span class="navi-icon">
                                        <i class="flaticon2-bell-2"></i>
                                    </span>
                                    <span class="navi-text">ลบภาพ</span>
                                </a>
                            </li>
                            <li class="navi-separator my-3"></li>
                            <li class="navi-item">
                                <a href="#" class="navi-link">
                                    <span class="navi-icon">
                                        <i class="flaticon2-magnifier-tool"></i>
                                    </span>
                                    <span class="navi-text">ดาวน์โหลด</span>
                                </a>
                            </li>
                            <li class="navi-item">
                                <a href="#" class="navi-link">
                                    <span class="navi-icon">
                                        <i class="flaticon2-bell-2"></i>
                                    </span>
                                    <span class="navi-text">ดาวโหลดอัลบั้ม</span>
                                    <span class="navi-link-badge">
                                        <span class="label label-light-danger label-rounded font-weight-bold">15</span>
                                    </span>
                                </a>
                            </li>

                        </ul>
                        <!--end::Navigation-->
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body @selectedBG">
            <div class="d-flex flex-column align-items-center">
                <!--begin: Icon--> 
                <img src="@Url.Content(Model.UrlPath)" alt="@Html.Raw(Model.AttachFileName)" style="height: 330px !important;" class="img-thumbnail">
                <!--end: Icon-->
                <!--begin: Tite-->
                <a href="#" class="text-dark-75 font-weight-bold mt-15 font-size-lg" style="@selectedStyle">@Html.Raw(Model.UserFullName) @Html.Raw(selectedICON)</a>
                <!--end: Tite-->
            </div>
        </div>
        <div class="card-footer">
            <div class="mb-10 mt-5">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-dark-75 font-weight-bolder mr-2">ประเภทงาน :</span>
                    <a href="#" class="text-muted text-hover-primary">@Html.Raw(Model.Category)</a>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-dark-75 font-weight-bolder mr-2">Tags :</span>
                    <a href="#" class="text-muted text-hover-primary">@Html.Raw(Model.Tags)</a>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-dark-75 font-weight-bolder mr-2">วันที่ส่งประกวด :</span>
                    <a href="#" class="text-muted text-hover-primary">@Html.Raw(Model.CreatedDateStr)</a>
                </div>
            </div>
        </div>
    </div>
    <!--end:: Card-->
</div>
<!--end::Col-->