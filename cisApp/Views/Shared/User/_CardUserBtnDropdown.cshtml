@model cisApp.Function.UserModel

@{ 
    string userController = "UserManagement";
    if (Model.UserType == 3)
    {
        userController = "Employee";
    }
}

<div class="dropdown dropdown-inline" data-toggle="tooltip" title="Quick actions" data-placement="left">
    <a href="#" class="btn btn-clean btn-hover-light-primary btn-sm btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="ki ki-bold-more-hor"></i>
    </a>
    <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
        <!--begin::Navigation-->
        <ul class="navi navi-hover">
            <li class="navi-header pb-1">
                <span class="text-primary text-uppercase font-weight-bold font-size-sm">Action:</span>
            </li>
            <li class="navi-item">

                <a href="@Url.Action("Manage",ViewData["ControllerName"].ToString(), new { id = Model.UserId })" class="navi-link">
                    <span class="navi-icon">
                        <i class="flaticon2-document"></i>
                    </span>
                    <span class="navi-text">ดูรายละเอียด</span>
                </a>
            </li>
            <li class="navi-item">
                <a href="@Url.Action("index","Jobs", new { Id = Model.UserId })" class="navi-link" target="_blank">
                    <span class="navi-icon">
                        <i class="flaticon2-list-3"></i>
                    </span>
                    <span class="navi-text">ใบงาน</span>
                </a>
            </li>
            <li class="navi-item">
                <a href="@Url.Action("Manage","Jobs", new { gId = Model.UserId })" class="navi-link" target="_blank">
                    <span class="navi-icon">
                        <i class="flaticon-add"></i>
                    </span>
                    <span class="navi-text">สร้างใบงาน</span>
                </a>
            </li>
            <li class="navi-item">
                <a href="@Url.Action("Private","Chats", new { id = Model.UserId })" class="navi-link">
                    <span class="navi-icon">
                        <i class="flaticon-chat"></i>
                    </span>
                    <span class="navi-text">Chat</span>
                </a>
            </li>
            <li class="navi-item">
                <a href="@Url.Action("index","Files", new { id = Model.UserId })" class="navi-link">
                    <span class="navi-icon">
                        <i class="flaticon2-writing"></i>
                    </span>
                    <span class="navi-text">File</span>
                </a>
            </li>

            <li class="navi-item">
                <a href="#" data-url="@Url.Action("Delete", ViewData["ControllerName"].ToString(), new { id = Model.UserId })" class="navi-link bt-delete">
                    <span class="navi-icon">
                        <i class="flaticon-delete"></i>
                    </span>
                    <span class="navi-text">ลบรายการ</span>
                </a>
            </li>
            <li class="navi-item">
                <a href="@Url.Action("index","ActivityLogs"), new { id = Model.UserId }" class="navi-link ">
                    <span class="navi-icon">
                        <i class="flaticon2-graph-1"></i>
                    </span>
                    <span class="navi-text">ประวัติการใช้งาน</span>
                </a>
            </li>

        </ul>
        <!--end::Navigation-->
    </div>
</div>
