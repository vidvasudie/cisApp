@model SystemSetting
@using cisApp.Core
@using cisApp.Function
@{
    ViewData["Title"] = "ตั้งค่าระบบ " + Model.Keyword;
    ViewData["ControllerName"] = "SystemSetting";
}

@section scripts{

    

    <script src="@Url.Content("~/assets/plugins/custom/uppy/uppy.bundle.js")"></script>
    <script src="@Url.Content("~/assets/js/pages/crud/file-upload/uppy.js")"></script>

}

<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-1 mr-5">Cludidea</h5>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">Dashbaord</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">รายการ</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">@ViewData["Title"]</a>
                        </li>
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
            <!--begin::Toolbar-->
            <div class="d-flex align-items-center">
                <!--begin::Actions-->
                <a href="#" class="btn btn-light-primary font-weight-bolder btn-sm">Actions</a>
                <!--end::Actions-->
                
            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <!--begin::Card-->
            <div class="card card-custom card-sticky" id="kt_page_sticky_card">
                <div class="card-header">
                    <div class="card-title">
                        <h3 class="card-label">
                            @ViewData["Title"]
                            <i class="mr-2"></i>
                        </h3>
                    </div>
                    <div class="card-toolbar">
                        <a href="#" class="btn btn-light-primary font-weight-bolder mr-2">
                            <i class="ki ki-long-arrow-back icon-sm"></i>ย้อนกลับ
                        </a>
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary font-weight-bolder btn-submit">
                                <i class="ki ki-check icon-sm"></i>บันทึก
                            </button>
                            <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                            <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
                                <ul class="nav nav-hover flex-column">
                                    <li class="nav-item">
                                        <a href="#" class="nav-link">
                                            <i class="nav-icon flaticon2-reload"></i>
                                            <span class="nav-text">Save &amp; continue</span>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" class="nav-link">
                                            <i class="nav-icon flaticon2-add-1"></i>
                                            <span class="nav-text">Save &amp; add new</span>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" class="nav-link">
                                            <i class="nav-icon flaticon2-power"></i>
                                            <span class="nav-text">Save &amp; exit</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!--begin::Form-->
                    <form class="form" id="kt_form" asp-action="Manage" asp-controller=@ViewData["ControllerName"] method="post" data-ajax-confirm="@MessageCommon.Confirm" data-ajax="true" data-ajax-success="redirect">
                        <div class="row">
                            <div class="col-xl-2"></div>
                            <div class="col-xl-8">

                                @Html.HiddenFor(m => m.SystemSettingId)
                                @Html.HiddenFor(m => m.Keyword)

                                <div class="my-5">
                                    <h3 class="text-dark font-weight-bold mb-10">@ViewData["Title"] :</h3>
                                    <div class="form-group row">
                                        <label class="col-3">Host</label>
                                        <div class="col-9">
                                            @*<input class="form-control form-control-solid" type="text" value="District 6 1352 W. Olive Ave" />*@
                                            @Html.TextBoxFor(m => m.Value1, new { @class = "form-control form-control-solid", @autocomplete = "off" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-3">FromEmail</label>
                                        <div class="col-9">
                                            @*<input class="form-control form-control-solid" type="text" value="District 6 1352 W. Olive Ave" />*@
                                            @Html.TextBoxFor(m => m.Value2, new { @class = "form-control form-control-solid", @autocomplete = "off" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-3">Password</label>
                                        <div class="col-9">
                                            @*<input class="form-control form-control-solid" type="text" value="District 6 1352 W. Olive Ave" />*@
                                            @Html.TextBoxFor(m => m.Value3, new { @class = "form-control form-control-solid", @autocomplete = "off" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-3">Port</label>
                                        <div class="col-9">
                                            @*<input class="form-control form-control-solid" type="text" value="District 6 1352 W. Olive Ave" />*@
                                            @Html.TextBoxFor(m => m.Value4, new { @class = "form-control form-control-solid", @autocomplete = "off" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-3">EnableSsl</label>
                                        <div class="col-9">
                                            @*<input class="form-control form-control-solid" type="text" value="District 6 1352 W. Olive Ave" />*@
                                            @Html.TextBoxFor(m => m.Value5, new { @class = "form-control form-control-solid", @autocomplete = "off" })
                                        </div>
                                    </div>

                                </div>



                            </div>
                            <div class="col-xl-2"></div>
                        </div>
                    </form>
                    <!--end::Form-->
                </div>
            </div>
            <!--end::Card-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
<!--end::Content-->
