@section scripts {

    <script src="@Url.Content("~/lib/TableExport/xlsx.core.min.js")"></script>
    <script src="@Url.Content("~/lib/TableExport/FileSaver.js")"></script>
    <script src="@Url.Content("~/lib/TableExport/tableExport.js")"></script>

    <script>
        function GetModal(url) {
            var suc = function (html) {
                $('.modal-body').html(html);
            }
            var err = function (e) {
                alert('error modal', e);
            }

            CallAjax(url, 'GET', null, suc, err);//, { id }
        }
        function PagerClick(index) {
            var suc = function (html) {
                $('#box_update').html(html);
            }
            var err = function (e) {
                alert('error paging', e);
            }

            var text = $('#kt_datatable_search_query').val()
            var status = $('#kt_datatable_search_status').val()
            var OrderBy = $('#kt_datatable_search_order').val()


            CallAjax('@Url.Action("ItemList", ViewData["ControllerName"])', 'POST'
                , {
                    text
                    , OrderBy
                    , status
                    , currentPage: index
                    , pageSize: $('#pageSize').val()
                }
                , suc, err);
        }
        function Export() {
            var text = $('#kt_datatable_search_query').val()
            var status = $('#kt_datatable_search_status').val()
            var OrderBy = $('#kt_datatable_search_order').val()
            var sys = '@Html.Raw(ViewData["Title"].ToString())';

            GetExport('@Url.Action("Export", ViewData["ControllerName"])',  {
                    text
                    , OrderBy
                    , status
                    , currentPage: 1
                    , pageSize: $('#TotalCount').val()
                }, 'รายงาน'+sys+'_@DateTime.Now.ToString("yyyyMMddHHmmss")');
        }

        $(function () {
        $('body').on('change', '#pageSize', function () {
            PagerClick(1);
        });
        PagerClick(1);
        $('body').on('click', '.bt-issue-update', function () {
            GetModal($(this).attr('data-url'));
            $('.btn-issue-modal').show();
            $('.btn-issue-modal').on('click', function () {
                $('#kt_form_modal').submit();
            });
            $('#kt_issue_modal').modal('show');
        });
        $('body').on('click', '.bt-issue-view', function () {
            GetModal($(this).attr('data-url'));
            $('.btn-issue-modal').hide();
            $('#kt_issue_modal').modal('show');
        });

            
    });
         
        


    </script>
