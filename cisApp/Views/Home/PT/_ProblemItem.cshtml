@using cisApp.library
@using cisApp.Function
@using cisApp.Core
@model DashboardModel

@{

}


<!--begin::Col-->
<div class="col-xl-12">
    <!--begin::Chart widget 19-->
    <div class="card card-flush h-xl-100">
        <!--begin::Header-->
        <div class="card-header pt-7  border-0">
            <!--begin::Title-->
            <h4 class=" align-items-start flex-column">
                <span class="card-label fw-bold text-gray-800">รายการแจ้งปัญหาระบบ</span>
                <a href="@Url.Action("Index", "SystemProblems")" target="_blank" class="btn btn-light-info ml-10">ตรวจสอบ</a>
            </h4>
            <!--end::Title-->
        </div>
        <!--end::Header-->
        <!--begin::Body-->
        <div class="card-body py-3">
            <div class="mb-5">
                <span style="color: red;">*** แสดง @Model.UserHelps.Count() รายการ จากทั้งหมด @Model.Total รายการ</span>
            </div>
            <!--begin::Table container-->
            <div class="table-responsive">
                <!--begin::Table-->
                <table class="table table-row-dashed align-middle gs-0 gy-3 my-0">
                    <!--begin::Table head-->
                    <thead>
                        <tr class="border-bottom-0">
                            <th class="p-0 w-50px"></th>
                            <th class="p-0 min-w-175px"></th>
                            <th class="p-0 min-w-175px"></th>
                            <th class="p-0 min-w-150px"></th>
                            <th class="p-0 min-w-150px"></th>
                        </tr>
                    </thead>
                    <!--end::Table head-->
                    <!--begin::Table body-->
                    <tbody>
                        @{
                            foreach (var item in Model.UserHelps)
                            {
                                Users user = GetUser.Get.GetByEmailAndTel(email: item.Email, tel: item.Tel);
                                <tr>
                                    <td>
                                        <div class="symbol symbol-40px">
                                            <span class="">
                                                <!--begin::Svg Icon | path: icons/duotune/technology/teh008.svg-->
                                                <span class="svg-icon svg-icon-primary svg-icon-2x">
                                                    <!--begin::Svg Icon | path:/var/www/preview.keenthemes.com/metronic/releases/2021-05-14-112058/theme/html/demo1/dist/../src/media/svg/icons/Text/Redo.svg--><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                            <rect x="0" y="0" width="24" height="24" />
                                                            <path d="M21.4451171,17.7910156 C21.4451171,16.9707031 21.6208984,13.7333984 19.0671874,11.1650391 C17.3484374,9.43652344 14.7761718,9.13671875 11.6999999,9 L11.6999999,4.69307548 C11.6999999,4.27886191 11.3642135,3.94307548 10.9499999,3.94307548 C10.7636897,3.94307548 10.584049,4.01242035 10.4460626,4.13760526 L3.30599678,10.6152626 C2.99921905,10.8935795 2.976147,11.3678924 3.2544639,11.6746702 C3.26907199,11.6907721 3.28437331,11.7062312 3.30032452,11.7210037 L10.4403903,18.333467 C10.7442966,18.6149166 11.2188212,18.596712 11.5002708,18.2928057 C11.628669,18.1541628 11.6999999,17.9721616 11.6999999,17.7831961 L11.6999999,13.5 C13.6531249,13.5537109 15.0443703,13.6779456 16.3083984,14.0800781 C18.1284272,14.6590944 19.5349747,16.3018455 20.5280411,19.0083314 L20.5280247,19.0083374 C20.6363903,19.3036749 20.9175496,19.5 21.2321404,19.5 L21.4499999,19.5 C21.4499999,19.0068359 21.4451171,18.2255859 21.4451171,17.7910156 Z" fill="#000000" fill-rule="nonzero" transform="translate(12.254964, 11.721538) scale(-1, 1) translate(-12.254964, -11.721538) " />
                                                        </g>
                                                    </svg><!--end::Svg Icon-->
                                                </span>
                                                <!--end::Svg Icon-->
                                            </span>
                                        </div>
                                    </td>
                                    <td class="ps-0">
                                        @if (user != null)
                                        {
                                            <span class="text-dark fw-bold d-block fs-6" style="word-wrap: break-word;">@Html.Raw(user.Fname + " " + user.Lname)</span>
                                        }
                                        else
                                        {
                                            <span class="text-dark fw-bold d-block fs-6" style="word-wrap: break-word;color:red;">ไม่พบชื่อในระบบ</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-dark fw-bold d-block fs-6" style="display: -webkit-box !important;-webkit-line-clamp: 2;-webkit-box-orient: vertical;overflow: hidden;">@item.Message</span>
                                    </td>
                                    <td class="ps-0">
                                        <span>@item.Email</span>
                                    </td>
                                    <td>
                                        <span class="text-dark fw-bold d-block fs-6">@item.CreatedDate.ToStringFormat()</span>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                    <!--end::Table body-->
                </table>
                <!--end::Table-->
            </div>
            <!--end::Table container-->
        </div>
        <!--begin::Body-->
    </div>
    <!--end::Chart widget 19-->
</div>
<!--end::Col-->