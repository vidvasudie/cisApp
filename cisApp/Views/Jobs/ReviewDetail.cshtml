                <!--end::Actions-->
                 
            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <!--begin::Card-->
            <div class="card card-custom card-sticky" id="kt_page_sticky_card">
                <div class="card-header">
                    <div class="card-title">
                        <h3 class="card-label">
                            @ViewData["Title"]
                            <i class="mr-2"></i>
                        </h3>
                    </div>
                    <div class="card-toolbar">
                        <a href="@Url.Action("Detail", "Jobs", new { JobId=Model.JobId })" class="btn btn-light-primary font-weight-bolder mr-2">
                            <i class="ki ki-long-arrow-back icon-sm"></i>ย้อนกลับ
                        </a> 
                    </div>
                </div>
                <div class="card-body">
                    <!--begin::Form-->
                    @await Html.PartialAsync("~/Views/Shared/Jobs/_DesignerReview.cshtml", Model)
                    <!--end::Form-->
                </div>
            </div>
            <!--end::Card-->
        </div>
        <!--end::Container-->
    </div>
