@using cisApp.Function
@model JobCandidateModel

@{
    //ViewData["Title"] = "จัดการข้อมูลผู้ใช้งาน" + (!string.IsNullOrEmpty(Model)?"ดีไซต์เนอร์": "ทั่วไป");
    ViewData["Title"] = "รายละเอียดความคิดเห็น";
    ViewData["ControllerName"] = "Jobs"; 
