@using cisApp.Controllers
@model cisApp.Function.JobModel
@{
}

<!--begin::Card-->
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="d-flex">
                <!--begin: Pic-->
                <div class="flex-shrink-0 mr-7 mt-lg-0 mt-3">

                    @if (Model.JobStatus == 1)//"ร่าง"
                    {
                        <div class="symbol symbol-50 symbol-lg-120 symbol-light-info">
                            <span class="symbol-label font-size-h5">ร่าง</span>
                        </div>
                    }
                    else if (Model.JobStatus == 2)//"รอ"
                    {
                        <div class="symbol symbol-50 symbol-lg-120 symbol-light-dark">
                            <span class="symbol-label font-size-h5">รอ</span>
                        </div>

                    }
                    else if (Model.JobStatus == 3)//"ประกวด"
                    {
                        <div class="symbol symbol-50 symbol-lg-120 symbol-light-warning">
                            <span class="symbol-label font-size-h5">ประกวด</span>
                        </div>
                    }

                    else if (Model.JobStatus == 4)//"ประกาศ"
                    {
                        <div class="symbol symbol-50 symbol-lg-120 symbol-light-primary">
                            <span class="symbol-label font-size-h5">ประกาศ</span>
                        </div>
                    }
                    else if (Model.JobStatus == 5)//"ส่งแบบ"
                    {
                        <div class="symbol symbol-50 symbol-lg-120 symbol-light-success">
                            <span class="symbol-label font-size-h5">ส่งแบบ</span>
                        </div>
                    }
                    else
                    {
                        <div class="symbol symbol-50 symbol-lg-120 symbol-light-danger">
                            <span class="symbol-label font-size-h5">ยกเลิก</span>
                        </div>
                    }
                    
                    <div class="symbol symbol-50 symbol-lg-120 symbol-primary d-none">
                        <span class="font-size-h3 symbol-label font-weight-boldest">JM</span>
                    </div>
                </div>
                <!--end: Pic-->
                <!--begin: Info-->
                <div class="flex-grow-1">
                    <!--begin: Title-->
                    <div class="d-flex align-items-center justify-content-between flex-wrap">
                        <div class="mr-3">
                            <!--begin::Name-->
                            <a href="#" class="d-flex align-items-center text-dark text-hover-primary font-size-h5 font-weight-bold mr-3">
                                @Html.Raw(Model.UserFullName)
                                <i class="flaticon2-correct text-success icon-md ml-2"></i>
                            </a>
                            <!--end::Name-->
                            <!--begin::Contacts-->
                            <div class="d-flex flex-wrap my-2">
                                <a href="#" class="text-muted text-hover-primary font-weight-bold mr-lg-8 mr-5 mb-lg-0 mb-2">
