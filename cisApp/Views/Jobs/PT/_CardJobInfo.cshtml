                                                <circle fill="#000000" cx="12" cy="21" r="1" />
                                            </g>
                                        </svg><!--end::Svg Icon-->
                                        <!--end::Svg Icon-->
                                    </span>@Html.Raw(Model.UserTel)
                                </a>
                            </div>
                            <!--end::Contacts-->
                        </div>
                        <div class="my-lg-0 my-1">
                            <a href="#" class="btn btn-sm btn-info font-weight-bolder text-uppercase">พิมพ์สัญญา</a>
                        </div>
                    </div>
                    <!--end: Title-->
                    <!--begin: Content-->
                    <div class="d-flex align-items-center flex-wrap justify-content-between">
                        <div class="flex-grow-1 font-weight-bold text-dark-50 py-5 py-lg-2 mr-5 w-100">
                            @Html.Raw("ขอบเขตงาน - " + Model.JobDescription) 
                        </div>
                        <div class="d-flex flex-wrap align-items-center py-2">
                            <div class="d-flex align-items-center mr-10">
                                <div class="mr-6">
                                    <div class="font-weight-bold mb-2">เริ่ม</div>
                                    <span class="btn btn-sm btn-text btn-light-primary text-uppercase font-weight-bold">@Html.Raw(String.IsNullOrEmpty(Model.JobBeginDateStr) ? "ไม่ระบุ" : Model.JobBeginDateStr)</span>
                                </div>
                                <div class="">
                                    <div class="font-weight-bold mb-2">สิ้นสุด</div>
                                    <span class="btn btn-sm btn-text btn-light-danger text-uppercase font-weight-bold">@Html.Raw(String.IsNullOrEmpty(Model.JobEndDateStr) ? "ไม่ระบุ" : Model.JobEndDateStr)</span>
                                </div>
                            </div>
                            <div class="flex-grow-1 flex-shrink-0 w-150px w-xl-300px mt-4 mt-sm-0">
                                @{
                                    int progress = 0;
                                    switch (Model.JobStatus)
                                    {
                                        case 1: progress = 0; break;
                                        case 2: progress = 25; break;
                                        case 3: progress = 50; break;
                                        case 4: progress = 75; break;
                                        case 5: progress = 100; break;
                                        case 6: progress = 100; break;
                                    }
                                }
                                <span class="font-weight-bold">Progress</span>
                                <div class="progress progress-xs mt-2 mb-2">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: @Html.Raw(progress+"%");" aria-valuenow="@Html.Raw(progress)" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="font-weight-bolder text-dark">@Html.Raw(progress + "%")</span>
                            </div>
                        </div>
                    </div>
                    <!--end: Content-->
                </div>
                <!--end: Info-->
            </div>

            @*buttom info*@
            <div class="separator separator-solid my-7"></div>
            <!--begin: Items-->
            <div class="d-flex align-items-center flex-wrap">
                <!--begin: Item-->
                <div class="d-flex align-items-center flex-lg-fill mr-5 my-1">
                    <span class="mr-4">
                        <i class="flaticon-piggy-bank icon-2x text-muted font-weight-bold"></i>
                    </span>
                    <div class="d-flex flex-column text-dark-75">
                        <span class="font-weight-bolder font-size-sm">มูลค่างาน</span>
                        <span class="font-weight-bolder font-size-h5">
                            @Html.Raw(Model.JobPrice + " บาท")
                        </span>
                    </div>
                </div>
                <!--end: Item-->
                <!--begin: Item-->
                <div class="d-flex align-items-center flex-lg-fill mr-5 my-1">
                    <span class="mr-4">
                        <i class="flaticon-confetti icon-2x text-muted font-weight-bold"></i>
                    </span>
                    <div class="d-flex flex-column text-dark-75">
                        <span class="font-weight-bolder font-size-sm">ราคา/ตรม</span>
                        <span class="font-weight-bolder font-size-h5">
                            @Html.Raw(Model.JobPricePerSqM)
                        </span>
                    </div>
                </div>
                <!--end: Item-->
                <!--begin: Item-->
                <div class="d-flex align-items-center flex-lg-fill mr-5 my-1">
                    <span class="mr-4">
                        <i class="flaticon-pie-chart icon-2x text-muted font-weight-bold"></i>
                    </span>
                    <div class="d-flex flex-column text-dark-75">
                        <span class="font-weight-bolder font-size-sm">ขนาด</span>
                        <span class="font-weight-bolder font-size-h5">
                            @Html.Raw(Model.JobAreaSize+" ตรม") 
                        </span>
                    </div>
                </div>
                <!--end: Item-->
                <!--begin: Item-->
                <div class="d-flex align-items-center flex-lg-fill mr-5 my-1">
                    <span class="mr-4">
                        <i class="flaticon-file-2 icon-2x text-muted font-weight-bold"></i>
                    </span>
                    <div class="d-flex flex-column flex-lg-fill">
                        <span class="text-dark-75 font-weight-bolder font-size-sm">73 กิจกรรม</span>
                        <a href="#" class="text-primary font-weight-bolder">View</a>
                    </div>
                </div>
                <!--end: Item-->
                <!--begin: Item-->
                <div class="d-flex align-items-center flex-lg-fill mr-5 my-1">
                    <span class="mr-4">
                        <i class="flaticon-chat-1 icon-2x text-muted font-weight-bold"></i>
                    </span>
                    <div class="d-flex flex-column">
                        <span class="text-dark-75 font-weight-bolder font-size-sm">648 Comments</span>
                        <a href="#" class="text-primary font-weight-bolder">View</a>
                    </div>
                </div>
                <!--end: Item-->
                <!--begin: Item-->
                <div class="d-flex align-items-center flex-lg-fill mr-5 my-1">
                    <span class="mr-4">
                        <i class="flaticon-chat-1 icon-2x text-muted font-weight-bold"></i>
                    </span>
                    <div class="d-flex flex-column">
                        <span class="text-dark-75 font-weight-bolder font-size-sm">สถานะ</span>
                        <a href="#" class="text-primary font-weight-bolder">รอชำระเงิน</a>
                    </div>
                </div>
                <!--end: Item-->
            </div>
            <!--begin: Items-->
        </div>
    </div>
<!--end::Card-->