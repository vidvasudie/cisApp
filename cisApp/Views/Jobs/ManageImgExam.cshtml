                                <i class="ki ki-check icon-sm"></i>บันทึก
                            </button> 
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!--begin::Form-->
                    <form class="form" id="kt_form" asp-action="JobUpdateImgExam" asp-controller=@ViewData["ControllerName"] method="post" data-ajax-confirm="@MessageCommon.Confirm" data-ajax="true" data-ajax-success="redirect">
                        <div class="row">
                            <div class="col-xl-2"></div>
                            <div class="col-xl-8"> 
                                @Html.HiddenFor(m => m.JobId)

                                <div class="my-5">

                                    @{

                                        foreach (var cat in cats)
                                        {
                                            // Model.JobExUpload = new UploadFilesModel() { ElementId = "kt_dropzone_multi_" + cat.JobExTypeId, JobExTypeId = cat.JobExTypeId, Description = cat.Description, files = new List<FileAttachModel>() };
                                            var catFiles = Model.files != null ? Model.files.Where(o => o.TypeId == cat.JobExTypeId).ToList() : new List<FileAttachModel>();
                                            <div class="separator separator-dashed my-10"></div>
                                            @await Html.PartialAsync("~/Views/Shared/Common/_DropzoneMultiFile.cshtml", new UploadFilesModel() { ElementId = "kt_dropzone_multi_" + cat.JobExTypeId, TypeId = cat.JobExTypeId, Description = cat.Description, files = catFiles })
                                        }
                                    }

                                </div>

                            </div>
                            <div class="col-xl-2"></div>
                        </div>
                    </form>
                    <!--end::Form-->
                </div>
            </div>
